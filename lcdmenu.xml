<application>
  <settings lcdColor="White" lcdBackground="On" />
  <folder text="System Info">
    <widget text="Show Date/Time" function="ShowDateTime" />
    <widget text="Set Date/Time" function="SetDateTime" />
    <folder text="Network">
      <widget text="IP Address" function="ShowIPAddress" />
      <widget text="Use 10.1.1.2" function="Use10Network" />
      <widget text="Use DHCP" function="UseDHCP" />
    </folder>
    <run text="Run ls">ls</run>
  </folder>
  <folder text="Beacon Setup">
    <folder text="Beacon Settings">
      <widget text="My Call:" function="Call1f" />
      <widget text="To Call:" function="Call2f" />
      <widget text="Message:" function="BMessagef" />
    </folder>
  <folder text="Beacon On Off">
      <widget text="Current Status \n" function="beaconstatus" />
      <widget text="Start Beacon" function="turnOn" />
      <widget text="Stop Beacon" function="turnOff" />
    </folder>
  </folder>
  <widget text="Quit Menu" function="DoQuit" />
  <widget text="Reboot System" function="DoReboot" />
  <widget text="Shutdown System" function="DoShutdown" />
</application>

